<h2>List of all the people who are currently interested in this book</h2>
<hr/>
<h3>Select a person you wish to lent your book to</h3>

<p>Title: {{hbsVar.theTitle}}</p>
<img src="{{hbsVar.theImage}}" alt="Image is unavailable"></img>

<div class="formListItems">
    {{# each hbsVar.theRequestUsername }}
        <form action="/acceptForm" method="POST">
            <input type="text" name="theId" value="{{../hbsVar._id}}" style="display:none"/>
            <input type="text" name="theUser" value="{{this}}" style="display:none"/>
            <input type="submit" value="{{this}}"/>
        </form>
    {{/each}}
</div>
